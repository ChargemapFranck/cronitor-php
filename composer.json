{
    "name": "cronitor/cronitor-php",
    "description": "Simple php client for communication with Cronitor.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Nathaniel Schweinberg",
            "email": "nathaniel@fightthecurrent.org"
        }
    ],
    "require": {
        "php": "~7.4|~8.0",
        "nyholm/psr7": "^1.3",
        "symfony/yaml": "^5.2",
        "php-di/php-di": "^6.3",
        "symfony/http-client": "^5.2",
        "juststeveking/http-slim": "^1.2",
        "juststeveking/http-auth-strategies": "^1.2",
        "squizlabs/php_codesniffer": "^3.5",
        "juststeveking/uri-builder": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Cronitor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cronitor\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2",
        "php-http/mock-client": "^1.4"
    },
    "scripts": {
        "test:unit": "phpdbg -qrr ./vendor/bin/phpunit --coverage-html build/coverage-report -d memory_limit=512M --testdox",
        "test": [
            "@test:unit"
        ],
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
